{
  "name": "Dagster + dbt + Snowflake Demo (Simple)",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.13-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true
    }
  },

  "containerEnv": {
    "PYTHONPATH": "/workspaces/dagster-snowflake-dbt-demo/dagster-demo/src",
    "DBT_PROJECT_DIR": "/workspaces/dagster-snowflake-dbt-demo/dbt_demo"
  },

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "onCreateCommand": "bash .devcontainer/setup-simple.sh",
  "postCreateCommand": "echo 'ðŸŽ‰ Codespace ready! Run cd dagster-demo && dagster dev to start the web UI.'",

  "forwardPorts": [3000, 8080],
  
  "remoteUser": "vscode"
}
